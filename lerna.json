{
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "ignoreChanges": ["*.md", ".spec.ts", ".stories.ts"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com/",
      "verifyAccess": false
    }
  },
  "packages": [
    "packages/ui",
    "packages/examples/*"
  ],
  "version": "independent"
}
