{
  "name": "remix-sample",
  "version": "0.1.1",
  "author": "Lucas Castro <lucas.castro@gmail.com>",
  "description": "A sample Remix app using NeutronUI",
  "private": true,
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "watch": "remix watch",
    "format": "prettier --ignore-path .eslintignore --write ./",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --fix --ignore-path .gitignore --ext .js,.ts,.tsx . && prettier --write .",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@hookform/resolvers": "2.8.3",
    "@remix-run/node": "^1.4.0",
    "@remix-run/react": "^1.4.0",
    "@remix-run/serve": "^1.4.0",
    "@withneutron/ui": "^0.1.0",
    "cross-fetch": "^3.1.4",
    "object-hash": "^3.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "7.19.5",
    "react-icons": "^4.3.1",
    "remix": "^1.3.2",
    "zustand": "^3.6.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.0",
    "@remix-run/eslint-config": "^1.4.0",
    "@types/object-hash": "^2.2.1",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "object-hash": "^3.0.0",
    "prettier": "2.3.2",
    "pretty-quick": "3.1.1",
    "typescript": "^4.5.5"
  },
  "resolutions": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "engines": {
    "node": ">=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "tsc && npm lint && npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
