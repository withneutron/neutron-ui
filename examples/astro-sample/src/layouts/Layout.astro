---
import { style } from "@withneutron/quarks"
import "@withneutron/quarks/styles"

export interface Props {
  title: string
}

const { title } = Astro.props

const bodyProps = style(
  {
    bg: "$amber1",
    p: "$40",
  },
  {},
  null,
  "BodyStyles"
)
const props = { class: bodyProps.className, style: bodyProps.style }
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body {...props}>
    <slot />
  </body>
</html>
