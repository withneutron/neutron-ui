{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object",
      "es2017.intl",
      "es2019.array",
      "esnext",
    ],
    "sourceMap": true,
    "allowJs": true,
    "rootDirs": ["src"],
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,

    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "build", "scripts", "dist", "dist/**/*", "**/*.spec.ts", "**/*.d.ts"],
  "include": ["manualTypes.d.ts", "**/*.ts", "**/*.tsx"]
}
